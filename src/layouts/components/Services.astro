---
import Button from "./Button.astro";

const services = [
  {
    title: "Gartenpflege",
    description:
      "lorem ipsum dolor sit amet consectetur adipisicing elit. Quos, voluptates.",
    image: "/images/gartenpflege.jpg",
  },
  {
    title: "Landschaftsbau",
    description:
      "lorem ipsum dolor sit amet consectetur adipisicing elit. Quos, voluptates.",
    image: "/images/landschaftsbau.jpg",
  },
];
---

<section class="py-32 bg-secondary" id="leistungen">
  <div class="container">
    <div class="flex justify-between">
      <h2 class="text-4xl font-bold text-primary">Was wir anbieten</h2>
      <Button />
    </div>
    <div class="grid grid-cols-2 gap-6 mt-8">
      {
        services.map((s) => (
          <div class="bg-white">
            <img
              src={s.image}
              alt={s.title}
              class="object-cover aspect-[9/9]"
            />
            <div class="p-6">
              <h3 class="text-2xl font-bold text-primary">{s.title}</h3>
              <p class="text-gray-600">{s.description}</p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
<div class="w-full h-64 -mt-56 bg-primary"></div>
